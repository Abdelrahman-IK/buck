java_annotation_processor(
    name = "ap",
    processor_class = "com.example.ap.kotlinap_kapt.AnnotationProcessorKotlin",
    visibility = [
        "PUBLIC",
    ],
    deps = [
        ":ap-lib",
    ],
)

kotlin_library(
    name = "ap-lib",
    srcs = [
        "AnnotationProcessorKotlin.kt",
    ],
    plugins = [
        "//com/example/ap/libs:google_auto_service",
    ],
    resources = glob([
        "resources/**",
    ]),
    resources_root = "resources",
    visibility = [
        "PUBLIC",
    ],
    deps = [
        "//com/example/ap/kotlinannotation:annotation-lib",
        "//com/example/ap/libs:auto-service.jar",
        "//com/example/ap/libs:kotlinpoet.jar",
    ],
)
