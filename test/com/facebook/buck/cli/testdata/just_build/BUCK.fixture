genrule(
    name = "bar",
    out = "bar",
    bash = "touch $OUT",
    cmd_exe = "echo \"\" > %OUT%",
)

genrule(
    name = "bar_with_multiple_outputs",
    outs = {
        "output1": [
            "bar",
        ],
        "output2": [
            "baz",
        ],
    },
    default_outs = ["baz"],
    bash = "touch $OUT/bar && touch $OUT/baz",
    cmd_exe = "(echo something)>%OUT%\\bar && (echo something)>%OUT%\\baz",
)

genrule(
    name = "no_defaults",
    outs = {
        "output1": [
            "bar",
        ],
        "output2": [
            "baz",
        ],
    },
    bash = "touch $OUT/bar && touch $OUT/baz",
    cmd_exe = "(echo something)>%OUT%\\bar && (echo something)>%OUT%\\baz",
)

genrule(
    name = "foo",
    srcs = [
        ":bar",
    ],
    out = "foo",
    cmd = "touch $OUT",
    cmd_exe = "echo \"\" > %OUT%",
)

genrule(
    name = "ex ample",
    srcs = [
        ":bar",
    ],
    out = "example",
    cmd = "touch \"$OUT\"",
    cmd_exe = "echo \"\" > \"%OUT%\"",
)

platform(
    name = "pl",
)

genrule(
    name = "with-default-target-platform",
    srcs = [
        ":bar",
    ],
    default_target_platform = ":pl",
    out = "foo",
    cmd = "touch $OUT",
    cmd_exe = "echo \"\" > %OUT%",
)
