apple_library(
    name = "Library",
    exported_headers = glob(["Library/**/*.h"]),
    modular = True,
)

apple_library(
    name = "PathsLibrary",
    exported_headers = subdir_glob(
        [("PathsLibrary", "**/*.h")],
        prefix = "PathsLibrary",
    ),
    modular = True,
)

apple_library(
    name = "Test",
    srcs = ["Test/Test.swift"],
    exported_deps = [":Library", ":PathsLibrary"],
    swift_version = "5",
)
