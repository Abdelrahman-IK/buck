apple_bundle(
    name = "DemoApp",
    binary = ":DemoAppBinary",
    extension = "app",
    info_plist = "Info.plist",
)

apple_library(
    name = "DemoAppModule",
    srcs = glob(["*.swift"]),
    use_swift_driver = True,
)

apple_binary(
    name = "DemoAppBinary",
    deps = [
        ":DemoAppModule",
    ],
    use_swift_driver = True,
)
